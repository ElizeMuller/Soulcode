List<Integer> pares = new List<Integer>();
for(Integer c = 2; c <=100; c += 2){
    pares.add(c);
}
for(Integer valor : pares){
    System.debug(valor);
}
-------------------------------------------------------------
List<String> series = new List<String>();

series.add('B99');
series.add('GOT');
series.add('Sandman');
series.add('The Witcher');
series.add('HOD');
series.add('Anne with an E');
series.add('TWD');
series.add('TVD');
series.add('Breaking Bad');

Integer ranking = 1;
for(String valor : series) {
    System.debug(ranking + ' - ' + valor);
    ranking++;
}

