List<String> series = new List<String>();

series.add('B99');
series.add('GOT');
series.add('Sandman');
series.add('The Witcher');
series.add('HOD');
series.add('Anne with an E');
series.add('TWD');
series.add('TVD');
series.add('Breaking Bad');

Integer ranking = 1;
for(String valor : series) {
    System.debug(ranking + ' - ' + valor);
    ranking++;
}

