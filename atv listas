       'Vinagrete', 'Farofa', 'Alcatra', 'Maionese', 'Linguiça', 'Coxa de frango', 'Feijão Tropeiro', 'Pão', 'Pasta de alho', 'Sorvete', 'Mousse de maracujá' 
};
System.debug(comidas);
List<String> bebidas = new List<String>{
     'Coca-Cola', 'Mineiro', 'Fanta laranja', 'Fanta uva', 'Pepsi Twist', 'Heineken', 'Amstel', 'Skol', 'Corona', 'Suco de laranja', 'Suco de uva'   
}; 
System.debug(bebidas);

