String sexo = 'M';
Decimal altura = 1.95;

System.debug(nome);
System.debug(sexo);
System.debug(altura);

IF( sexo == 'M'){
    System.debug('Peso ideal = ' + ((72.7 * altura) - 58));
}else{
    System.debug('Peso ideal = ' + ((62.1 * altura) - 44.7)); 
}

